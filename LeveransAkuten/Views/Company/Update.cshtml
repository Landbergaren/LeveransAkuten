@model CompanyUpdateVm
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="jumbotron">
        <h3>Företag</h3>
        <form asp-controller="company" asp-action="Update">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" type="text" class="form-control">
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control">
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control">
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyName"></label>
                <input asp-for="CompanyName" type="text" class="form-control" id="exampleInputEmail1">
                <span asp-validation-for="CompanyName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" type="text" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="PhoneNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" type="text" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="City"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCode"></label>
                <input asp-for="ZipCode" type="text" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="ZipCode"></span>
            </div>
            <div class="form-group">
                <label asp-for="StreetAddress"></label>
                <input asp-for="StreetAddress" type="text" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="StreetAddress"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="6" type="text" class="form-control" id="exampleInputPassword1"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <button type="submit" class="btn btn-primary">Uppdatera</button>
        </form>
    </div>
</div>

