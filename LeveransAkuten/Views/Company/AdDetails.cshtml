@model DetailsAdsVm
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts {
    <link href="~/styles/AdDetails.css" rel="stylesheet" />
    <link href="~/styles/DriverDetails.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
}

<div class="container emp-profile border border-dark bg-light">
    <div class="row">
        <div class="col-md-4">
            <div class="profile-img">
                @{
                    @*if (Model.Image != null)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" alt="Profilbild" width="200" height="150" />
                        }*@
                }
            </div>
          
          
        </div>
        <div class="col-md-5">
            <div class="profile-head">
                <h2>
                    @Model.Header
                </h2>
                <div class="col-md-8 mt-3">
                    <div class="row">
                        <div class="col-md-6">
                            <label  class="font-weight-bold">Företag</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.CompanyName</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="font-weight-bold">Uppdrag</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Description</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label  class="font-weight-bold">Startdatum</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.StartDate.ToString("yyyy/MM/dd")</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label  class="font-weight-bold">Slutdatum</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.EndDate.ToString("yyyy/MM/dd")</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <label  class="font-weight-bold">Körkortskrav</label>
                        </div>
                        <div class="col-6">
                            @{
                                if (Model.Arequired)
                                {
                                    <span>A</span>
                                }
                                if (Model.Brequired)
                                {
                                    <span>B</span>
                                }
                                if (Model.Crequired)
                                {
                                    <span>C</span>
                                }
                                if (Model.Cerequired)
                                {
                                    <span>CE</span>
                                }
                                if (Model.Drequired)
                                {
                                    <span>D</span>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="justify-content-end">
            <a asp-action="Index" class="btn btn-dark">Tillbaka</a>
        </div>
    </div>
</div>