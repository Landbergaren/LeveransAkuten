@model CompanyIndexVm
<div class="container">

    <!-- Page Heading -->
    <section>
        <h1 class="my-4">
            @User.Identity.Name
        </h1>
    </section>
    <a asp-controller="Company" asp-action="CreateAd" class="btn btn-success">Skapa ny Annons</a>

    <main>
        <h3>Dina kommande uppdrag</h3>
        @if (Model?.AdsNotStarted != null)
        {
            foreach (var ad in Model?.AdsNotStarted)
            {
                <div class="row">
                    <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
                        <div class="card h-100">
                            <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="#">@ad.Header</a>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Det finns inga kommande uppdrag just nu</p>
        }
        <!-- /.row -->
        <!-- Pagination -->
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>

        <h3>Dina pågeånde uppdrag</h3>
        @if (Model?.AdsActive != null)
        {
            foreach (var ad in Model?.AdsActive)
            {
                <div class="row">
                    <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
                        <div class="card h-100">
                            <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="#">@ad.Header</a>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Det finns inga pågående uppdrag just nu</p>
        }
        <!-- /.row -->
        <!-- Pagination -->
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>

        <h3>Dina avslutade uppdrag</h3>
        @if (Model?.AdsFinished != null)
        {
            foreach (var ad in Model?.AdsFinished)
            {
                <div class="row">
                    <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
                        <div class="card h-100">
                            <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="#">@ad.Header</a>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Du har inga avslutade uppdrag än</p>
        }

        <!-- /.row -->
        <!-- Pagination -->
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>

    </main>
</div>
<!-- /.container -->