@model DriverIndexVm
<div class="container">
    <!-- Page Heading -->
    <section>
        <h1 class="my-4">
            @User.Identity.Name
        </h1>
    </section>
    <form class="float-right" asp-action="DisplayAds" asp-controller="Driver" method="get">
        <input type="submit" value="Sök Annons" class="btn btn-success " />
    </form>

    <main>

        @if (Model?.AdsNotStarted != null)
        {

            foreach (var ad in Model?.AdsNotStarted)
            {
                @if (ad.DriverId != null)
                {



                    <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item bg-success">

                        <div class="card h-100 ">
                            <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
                            <div class="card-body ">

                                <a asp-action="AdDetails" asp-route-id="@ad.Id" asp-controller="Driver">
                                    <h4 class="card-title">
                                        @ad.Header
                                    </h4>
                                </a>
                                <h4>From: @ad.Start.ToString("yyyy/MM/dd") to: @ad.End </h4>

                            </div>
                        </div>
                    </div>

                    <br />
                    <br />
                    <br />
                }

                else
                {

                    <div class="row">
                        <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
                            <div class="card h-100">
                                <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
                                <div class="card-body ">

                                    <a asp-action="AdDetails" asp-route-id="@ad.Id" asp-controller="Driver">
                                        <h4 class="card-title">
                                            @ad.Header
                                        </h4>
                                    </a>
                                    <h4>From: @ad.Start.ToString("yyyy/MM/dd") to: @ad.End </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                }

            }
        }
        else
        {
            <p>Det finns inga kommande uppdrag just nu</p>
        }





