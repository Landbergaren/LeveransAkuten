@model DetailsAdsVm

@{
    ViewData["Title"] = "AdDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <link href="~/styles/AdDetails.css" rel="stylesheet" />
    <link href="~/styles/DriverDetails.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
}

<div class="container emp-profile border border-dark bg-light">
    <div class="row">
        <div class="col-md-4">
            <div class="profile-img">
                @{
                    @*if (Model.Image != null)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" alt="Profilbild" width="200" height="150" />
                        }*@
                }
            </div>
            <div class="row justify-content-center mt-2">
                <form asp-action="TakeIt" asp-controller="Driver" asp-route-id="@Model.Id" method="post"><input type="submit" disabled="@Model.Booked" class="btn btn-primary" value="Ta uppdrag" /></form>
            </div>
        </div>
        <div class="col-md-5">
            <div class="profile-head">
                <h5>
                    @Model.Header
                </h5>
                <div class="col-md-8 mt-3">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Företag</label>
                        </div>
                        <div class="col-md-6">
                            <a asp-controller="driver" asp-action="CompanyDetails" asp-route-id="@Model.CompanyId">@Model.CompanyName</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Uppdrag</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Description</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Startdatum</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.StartDate</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Slutdatum</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.EndDate</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <label>Körkortskrav</label>
                        </div>
                        <div class="col-6">
                            @{
                                if (Model.Arequired)
                                {
                                    <span>A</span>
                                }
                                if (Model.Brequired)
                                {
                                    <span>B</span>
                                }
                                if (Model.Crequired)
                                {
                                    <span>C</span>
                                }
                                if (Model.Cerequired)
                                {
                                    <span>CE</span>
                                }
                                if (Model.Drequired)
                                {
                                    <span>D</span>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="justify-content-end">
            <a asp-action="Index" class="btn btn-dark">Tillbaka</a>
        </div>
    </div>
</div>