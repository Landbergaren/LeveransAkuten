@model IEnumerable<AdsVm>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Header)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Arequired)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brequired)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Crequired)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drequired)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cerequired)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Header)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Arequired)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brequired)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Crequired)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Drequired)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cerequired)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                        <input type="submit" value="Delete" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
